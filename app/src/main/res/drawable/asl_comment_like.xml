<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/liked"
        android:state_checked="true"
        android:drawable="@drawable/ic_heart_solid_pink" />

    <item
        android:id="@+id/not_liked"
        android:drawable="@drawable/ic_heart_empty_grey" />

    <transition
        android:fromId="@id/not_liked"
        android:toId="@id/liked"
        android:drawable="@drawable/avd_like_comment"
        android:reversible="false" />

</animated-selector>