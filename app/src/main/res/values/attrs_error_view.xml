<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ErrorViewStyle">
        <attr name="style" format="reference" />
    </declare-styleable>

    <declare-styleable name="ErrorView">
        <attr name="reason" format="string" />
        <attr name="reasonColor" format="color" />
        <attr name="explain" format="string" />
        <attr name="explainColor" format="color" />
        <attr name="errorImage" format="reference" />
        <attr name="showReason" format="boolean" />
        <attr name="showExplain" format="boolean" />
        <attr name="showRetryButton" format="boolean" />
        <attr name="retryButtonText" format="string" />
        <attr name="retryButtonBackground" format="reference" />
        <attr name="retryButtonTextColor" format="color" />
        <attr name="explainAlignment" format="enum">
            <enum name="left" value="0" />
            <enum name="center" value="1" />
            <enum name="right" value="2" />
        </attr>
    </declare-styleable>
</resources>